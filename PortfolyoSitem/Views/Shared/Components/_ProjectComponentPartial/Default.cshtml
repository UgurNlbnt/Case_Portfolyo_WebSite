<section id="projects"
         class="min-h-screen flex flex-col justify-center px-8 md:px-20 py-20 border-t border-white/5 reveal-section">
    <div class="max-w-5xl mx-auto w-full">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4 relative inline-block">
                <span class="absolute -inset-4 bg-gradient-to-r from-red-600 via-orange-500 to-yellow-400 opacity-20 blur-xl rounded-full"></span>
                <span class="relative text-white uppercase tracking-wider">Seçili Projeler</span>
            </h2>
            <p class="text-muted max-w-2xl mx-auto">
                Gerçek dünya problemlerine çözüm üreten, modern teknolojilerle geliştirdiğim bazı çalışmalarım.
            </p>
        </div>
        <!-- Filtre Butonları -->
        <div class="flex flex-wrap justify-center gap-4 mb-12" id="project-filters">
            <button data-filter="all"
                    class="px-6 py-2 rounded-full border border-primary bg-primary/10 text-primary font-bold hover:bg-primary hover:text-white transition-all duration-300 active-filter">
                Tümü
            </button>
            <button data-filter="web"
                    class="px-6 py-2 rounded-full border border-white/10 bg-white/5 text-gray-400 hover:border-primary/50 hover:text-primary transition-all duration-300">
                Web
            </button>
            <button data-filter="mobil"
                    class="px-6 py-2 rounded-full border border-white/10 bg-white/5 text-gray-400 hover:border-primary/50 hover:text-primary transition-all duration-300">
                Mobil
            </button>
            <button data-filter="oyun"
                    class="px-6 py-2 rounded-full border border-white/10 bg-white/5 text-gray-400 hover:border-primary/50 hover:text-primary transition-all duration-300">
                Oyun
            </button>
        </div>

        <div class="relative">
            <!-- Sol Buton -->
            <button id="prevProject"
                    class="absolute left-0 top-1/2 -translate-y-1/2 -ml-5 md:-ml-20 z-10 bg-black/50 hover:bg-primary p-3 rounded-full backdrop-blur-sm border border-white/10 transition-all disabled:opacity-0 cursor-pointer hidden md:block">
                <span class="material-symbols-outlined text-white">chevron_left</span>
            </button>

            <div class="flex overflow-x-auto gap-6 pb-8 snap-x snap-mandatory scrollbar-hide scroll-smooth"
                 id="projects-grid">
                <!-- Proje 1 (Web) -->
                <article data-category="web"
                         class="project-card flex-none w-full md:w-[calc(50%-12px)] snap-start bg-card rounded-2xl overflow-hidden border border-white/10 group hover:shadow-2xl hover:shadow-primary/10 transition-all duration-500">
                    <div class="h-40 bg-gray-800 relative overflow-hidden">
                        <!-- Proje Görseli Yer Tutucu -->
                        <div class="absolute inset-0 bg-gradient-to-tr from-primary/20 to-purple-500/20 group-hover:scale-110 transition-transform duration-700">
                        </div>
                        <div class="absolute inset-0 flex items-center justify-center text-3xl font-bold text-white/10">
                            PROJE 01
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                            E-Ticaret
                            Platformu
                        </h3>
                        <p class="text-muted mb-4 text-sm line-clamp-2">
                            React ve Node.js kullanılarak
                            geliştirilmiş,
                            tam kapsamlı
                            bir alışveriş deneyimi sunan web uygulaması.
                        </p>
                        <div class="flex gap-2 mb-6">
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">React</span>
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">Node.js</span>
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">MongoDB</span>
                        </div>
                        <a href="#"
                           class="inline-flex items-center gap-2 text-white hover:text-primary transition-colors text-sm">
                            İncele <span class="material-symbols-outlined text-sm">arrow_outward</span>
                        </a>
                    </div>
                </article>

                <!-- Proje 2 (Web) -->
                <article data-category="web"
                         class="project-card flex-none w-full md:w-[calc(50%-12px)] snap-start bg-card rounded-2xl overflow-hidden border border-white/10 group hover:shadow-2xl hover:shadow-primary/10 transition-all duration-500">
                    <div class="h-40 bg-gray-800 relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-tr from-blue-500/20 to-green-500/20 group-hover:scale-110 transition-transform duration-700">
                        </div>
                        <div class="absolute inset-0 flex items-center justify-center text-3xl font-bold text-white/10">
                            PROJE 02
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                            Task
                            Yönetim
                            Paneli
                        </h3>
                        <p class="text-muted mb-4 text-sm line-clamp-2">
                            Takımların verimliliğini artırmak için
                            tasarlanmış,
                            sürükle-bırak özellikli görev yönetim aracı.
                        </p>
                        <div class="flex gap-2 mb-6">
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">Vue.js</span>
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">Firebase</span>
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">Tailwind</span>
                        </div>
                        <a href="#"
                           class="inline-flex items-center gap-2 text-white hover:text-primary transition-colors text-sm">
                            İncele <span class="material-symbols-outlined text-sm">arrow_outward</span>
                        </a>
                    </div>
                </article>

                <!-- Proje 3 (Mobil) -->
                <article data-category="mobil"
                         class="project-card flex-none w-full md:w-[calc(50%-12px)] snap-start bg-card rounded-2xl overflow-hidden border border-white/10 group hover:shadow-2xl hover:shadow-primary/10 transition-all duration-500">
                    <div class="h-40 bg-gray-800 relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-tr from-cyan-500/20 to-blue-600/20 group-hover:scale-110 transition-transform duration-700">
                        </div>
                        <div class="absolute inset-0 flex items-center justify-center text-3xl font-bold text-white/10">
                            PROJE 03
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                            Fitness
                            App
                        </h3>
                        <p class="text-muted mb-4 text-sm line-clamp-2">
                            Kullanıcıların egzersiz ve beslenme
                            takiplerini
                            yapabileceği, React Native ile geliştirilmiş mobil uygulama.
                        </p>
                        <div class="flex gap-2 mb-6">
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">
                                React
                                Native
                            </span>
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">Redux</span>
                        </div>
                        <a href="#"
                           class="inline-flex items-center gap-2 text-white hover:text-primary transition-colors text-sm">
                            İncele <span class="material-symbols-outlined text-sm">arrow_outward</span>
                        </a>
                    </div>
                </article>

                <!-- Proje 4 (Oyun) -->
                <article data-category="oyun"
                         class="project-card flex-none w-full md:w-[calc(50%-12px)] snap-start bg-card rounded-2xl overflow-hidden border border-white/10 group hover:shadow-2xl hover:shadow-primary/10 transition-all duration-500">
                    <div class="h-40 bg-gray-800 relative overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-tr from-red-500/20 to-yellow-500/20 group-hover:scale-110 transition-transform duration-700">
                        </div>
                        <div class="absolute inset-0 flex items-center justify-center text-3xl font-bold text-white/10">
                            PROJE 04
                        </div>
                    </div>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors">
                            2D
                            Platformer
                        </h3>
                        <p class="text-muted mb-4 text-sm line-clamp-2">
                            Unity oyun motoru kullanılarak
                            geliştirilmiş, 20'den
                            fazla bölüm içeren macera oyunu.
                        </p>
                        <div class="flex gap-2 mb-6">
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">Unity</span>
                            <span class="text-[10px] font-mono bg-white/5 px-2 py-1 rounded text-primary">C#</span>
                        </div>
                        <a href="#"
                           class="inline-flex items-center gap-2 text-white hover:text-primary transition-colors text-sm">
