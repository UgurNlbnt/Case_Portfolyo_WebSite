@using PortfolyoSitem.Data
@model List<ExperiencesTable>

<section id="experience"
         class="min-h-screen flex flex-col justify-center px-8 md:px-20 py-20 border-t border-white/5 reveal-section">
    <div class="max-w-4xl mx-auto w-full">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4 relative inline-block">
                <span class="absolute -inset-4 bg-gradient-to-r from-red-600 via-orange-500 to-yellow-400 opacity-20 blur-xl rounded-full"></span>
                <span class="relative text-white uppercase tracking-wider">Deneyimlerim</span>
            </h2>
            <p class="text-muted max-w-2xl mx-auto">
                Profosyonel Karıyerim boyunca edindiğim tecrübeler ve görev aldığım roller
            </p>
        </div>
        @foreach(var item in Model)
        {
            <div class="relative border-l border-white/10 ml-4 space-y-12">
                <div class="relative pl-8">
                    <span class="absolute -left-[9px] top-2 w-4 h-4 rounded-full bg-primary border-4 border-black"></span>
                    <span class="text-sm text-primary font-mono mb-2 block">@item.Year</span>
                    <h3 class="text-2xl font-bold text-white">@item.Title</h3>
                    <h4 class="text-lg text-gray-400 mb-4">@item.CompanyName</h4>
                    <p class="text-muted leading-relaxed">
                        @item.Description
                    </p>
                </div>

            </div>
        }

       
    </div>
</section>