@using PortfolyoSitem.Data

@model List<SkillsTable>
<section id="skills"
         class="min-h-screen flex flex-col justify-center px-8 md:px-20 py-20 border-t border-white/5 reveal-section">
    <div class="max-w-5xl mx-auto w-full text-center">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 relative inline-block">
            <span class="absolute -inset-4 bg-gradient-to-r from-red-600 via-orange-500 to-yellow-400 opacity-20 blur-xl rounded-full"></span>
            <span class="relative text-white uppercase tracking-wider">Teknik Yeterlilik</span>
        </h2>
        <p class="text-muted mb-16 max-w-2xl mx-auto">
            Modern arayüz geliştirmekten ölçeklenebilir .NET Core mimarilerine kadar uzmanlık alanlarımı
            özetleyen bir bölüm.
        </p>

        <div class="relative px-4 md:px-0">
            <!-- Sol Buton -->
            <button onclick="scrollSkills('left')"
                    class="absolute left-0 top-1/2 -translate-y-1/2 -ml-5 md:-ml-16 z-20 bg-card hover:bg-primary text-white p-3 rounded-full border border-white/10 transition-all shadow-lg hover:shadow-primary/50 hover:scale-110 hidden md:flex items-center justify-center cursor-pointer">
                <span class="material-symbols-outlined text-2xl">chevron_left</span>
            </button>

            <!-- Grid Container (2 Satır, Yatay Scroll) -->
            <div class="grid grid-rows-2 grid-flow-col gap-4 overflow-x-auto snap-x snap-mandatory scrollbar-hide scroll-smooth py-4"
                 id="skills-grid">

                <!-- Gradient Definition (Hidden) -->
                <svg width="0" height="0" class="absolute">
                    <defs>
                        <linearGradient id="skillGradient" x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset="0%" stop-color="#ffb700" />
                            <stop offset="50%" stop-color="#ff8800" />
                            <stop offset="100%" stop-color="#ff4d00" />
                        </linearGradient>
                    </defs>
                </svg>
                @foreach(var item in Model)
                {
                    <div class="skill-card w-40 md:w-56 snap-start bg-card p-4 rounded-2xl border border-white/5 hover:border-primary/30 transition-all duration-300 group flex flex-col items-center hover:-translate-y-2">
                        <div class="relative w-20 h-20 mb-3">
                            <svg class="w-full h-full" viewBox="0 0 100 100">
                                <circle class="text-white/10 stroke-current" stroke-width="6" cx="50" cy="50" r="40"
                                        fill="rgba(255,255,255,0.02)"></circle>
                                <circle class="progress-ring-circle" stroke="url(#skillGradient)" stroke-width="6"
                                        stroke-linecap="round" cx="50" cy="50" r="40" fill="transparent"
                                        stroke-dasharray="251.2" stroke-dashoffset="128.1"></circle> <!-- %49 -->
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <span class="text-lg font-bold text-white group-hover:text-primary transition-colors">@item.SkillsPercent %</span>
                            </div>
                        </div>
                        <h3 class="font-bold text-base text-white group-hover:text-primary transition-colors text-center">
                            @item.SkillName
                        </h3>
                    </div>
                }
            </div>

            <!-- Sağ Buton -->
            <button onclick="scrollSkills('right')"
                    class="absolute right-0 top-1/2 -translate-y-1/2 -mr-5 md:-mr-16 z-20 bg-card hover:bg-primary text-white p-3 rounded-full border border-white/10 transition-all shadow-lg hover:shadow-primary/50 hover:scale-110 hidden md:flex items-center justify-center cursor-pointer">
                <span class="material-symbols-outlined text-2xl">chevron_right</span>
            </button>
        </div>
    </div>
</section>