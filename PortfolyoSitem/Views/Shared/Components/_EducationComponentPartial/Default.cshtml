@using PortfolyoSitem.Data

@model List<EducationTable>
<section id="education"
         class="min-h-screen flex flex-col justify-center px-8 md:px-20 py-20 border-t border-white/5 reveal-section">
    <div class="max-w-4xl mx-auto w-full">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold mb-4 relative inline-block">
                <span class="absolute -inset-4 bg-gradient-to-r from-red-600 via-orange-500 to-yellow-400 opacity-20 blur-xl rounded-full"></span>
                <span class="relative text-white uppercase tracking-wider">Eğitim Bilgilerim</span>
            </h2>
            <p class="text-muted max-w-2xl mx-auto">
                Akademik geçmişim ve katıldığım yoğunlaştırılmış eğitim programları.
            </p>
        </div>
        <div class="grid md:grid-cols-2 gap-8">
            @foreach(var item in Model)
            {
                <div class="bg-card p-8 rounded-2xl border border-white/10 hover:border-primary/50 transition-all group">
                    <span class="material-symbols-outlined text-4xl text-primary mb-4 group-hover:scale-110 transition-transform">school</span>
                    <span class="block text-sm text-gray-500 font-mono mb-2">@item.Year</span>
                    <h3 class="text-xl font-bold text-white mb-1">@item.ProgramName</h3>
                    <p class="text-gray-400">@item.SchoolName</p>
                    <p class="text-muted mt-4 text-sm">
                        @item.Description
                    </p>
                </div>
            }
           
        </div>
    </div>
</section>