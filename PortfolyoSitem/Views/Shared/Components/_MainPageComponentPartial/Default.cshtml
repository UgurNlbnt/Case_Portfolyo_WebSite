@using PortfolyoSitem.Data
@model ProfileTable

<section id="home"
         class="min-h-screen flex flex-col justify-center items-center text-center px-6 reveal-section relative">

    <!-- Durum Badge'i -->
    <div class="mb-6 inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm animate-pulse">
        <span class="w-2 h-2 rounded-full bg-green-500"></span>
        <span class="text-xs md:text-sm font-medium tracking-wide text-gray-300">ÇALIŞMAYA AÇIK</span>
    </div>

    <!-- Profil Resmi -->
    <div class="mb-8 relative group">
        <div class="absolute -inset-1 bg-gradient-to-r from-primary via-accent to-secondary rounded-full blur opacity-75 group-hover:opacity-100 transition duration-1000 group-hover:duration-200">
        </div>
        <div class="relative w-32 h-32 md:w-40 md:h-40 rounded-full overflow-hidden border-2 border-white/10 bg-black">
            <!-- Buraya kendi resmini koyabilirsin. Şimdilik avatar placeholder kullanıyorum -->
            <img src="@Model.ImageUrl" alt="Profil Resmi"
                 class="w-full h-full object-cover">
        </div>
    </div>

    <!-- İsim -->
    <h1 class="text-4xl md:text-7xl font-bold mb-2 tracking-tighter">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-red-600 via-orange-500 to-yellow-400 animate-gradient-x">
            @Model.FullName
        </span>
    </h1>

    <!-- Unvan (Altı Çizili Stil) -->
    <div class="relative mb-8">
        <h2 class="text-2xl md:text-5xl font-bold text-white relative z-10">
            @Model.Title
        </h2>
        <div class="absolute bottom-1 left-0 w-full h-3 bg-primary/30 -rotate-1 z-0 blur-sm"></div>
    </div>

    <!-- Açıklama -->
    <p class="text-lg md:text-xl text-gray-400 max-w-2xl mb-12 leading-relaxed">
       @Model.ShortDescription
    </p>

    <!-- Butonlar -->
    <div class="flex flex-col md:flex-row gap-6 items-center w-full justify-center mb-20">
        <a href="#about" id="hero-cta"
           class="group relative px-8 py-4 bg-primary rounded-full text-white font-bold overflow-hidden transition-all hover:scale-105 hover:shadow-[0_0_40px_-10px_rgba(255,77,0,0.5)]">
            <div class="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:animate-[shimmer_1.5s_infinite]">
            </div>
            <span class="flex items-center gap-2">
                DEVAM ET <span class="material-symbols-outlined group-hover:translate-y-1 transition-transform">arrow_downward</span>
            </span>
        </a>
    </div>

</section>