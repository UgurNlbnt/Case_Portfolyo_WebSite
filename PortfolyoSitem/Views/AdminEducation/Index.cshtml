@using PortfolyoSitem.Data
@model List<EducationTable>

@{
    ViewData["Title"] = "Eğitim";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div id="section-egitim" class="page-section">
    <div class="toolbar">
        <a href="/AdminEducation/CreateEducation"
           class="btn btn-add">
            <i class="fa-solid fa-plus"></i> Yeni Eğitim Bilgisi Ekle
        </a>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th style="width: 50px;">ID</th>
                    <th>Okul Adı</th>
                    <th>Bölüm/Açıklama </th>
                    <th>Yıl </th>
                    <th style="width: 180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.SchoolName</td>
                        <td>
                            <strong>@item.ProgramName</strong><br>@item.Description
                        </td>
                        <td>@item.Year</td>
                        <td>
                            <div class="action-buttons">
                                <a href="/AdminEducation/UpdateEducation/@item.EducationId"
                                   class="btn btn-sm btn-edit">
                                    <i class="fa-solid fa-pen"></i> Güncelle
                                </a>

                                <a href="/AdminEducation/DeleteEducation/@item.EducationId"
                                   class="btn btn-sm btn-delete"
                                   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?')">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
