@using PortfolyoSitem.Data
@model List<ExperiencesTable>
@{
    ViewData["Title"] = "Deneyimler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div id="section-deneyimler" class="page-section">
    <div class="toolbar">
        <a href="/AdminExperience/CreateExperience"
           class="btn btn-add">
            <i class="fa-solid fa-plus"></i> Yeni Bilgi Ekle
        </a>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th style="width: 50px;">Id</th>
                    <th>Pozisyon</th>
                    <th>Firma Adı</th>
                    <th>Açıklama </th>
                    <th>Tarih</th>
                    <th style="width: 180px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@item.Title</td>
                        <td>@item.CompanyName</td>
                        <td>
                            @item.Description
                        </td>
                        <td>@item.Year</td>
                        <td>
                            <div class="action-buttons">
                                <a href="/AdminExperience/UpdateExperience/@item.ExperienceId"
                                   class="btn btn-sm btn-edit">
                                    <i class="fa-solid fa-pen"></i> Güncelle
                                </a>

                                <a href="/AdminExperience/DeleteExperience/@item.ExperienceId"
                                   class="btn btn-sm btn-delete"
                                   onclick="return confirm('Bu kaydı silmek istediğinize emin misiniz?')">
                                    <i class="fa-solid fa-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
               
            
            </tbody>
        </table>
    </div>
</div>



