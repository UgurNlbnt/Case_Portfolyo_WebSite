
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- 0. Dashboard -->
<div id="section-dashboard" class="page-section">
    <div class="dashboard-grid">

        <!-- 1. İlk Projem -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-rocket"></i>
            </div>
            <div class="card-info">
                <p>İlk Projem</p>
                <h3>@ViewBag.firstProject</h3>
            </div>
        </div>

        <!-- 2. Son Projem -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-code-branch"></i>
            </div>
            <div class="card-info">
                <p>Son Projem</p>
                <h3>@ViewBag.lastProject</h3>
            </div>
        </div>

        <!-- 3. Toplam Proje Sayısı -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-folder-open"></i>
            </div>
            <div class="card-info">
                <p>Toplam Proje Sayısı</p>
                <h3>@ViewBag.totalProjects</h3>
            </div>
        </div>

        <!-- 4. En Çok Hangi Kategoride -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-layer-group"></i>
            </div>
            <div class="card-info">
                <p>En Çok Var Olan Kategori Kategori</p>
                <h3>@ViewBag.MostUsedCategoryName</h3>
            </div>
        </div>

        <!-- 5. İlk Deneyimim -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-layer-group"></i>
            </div>
            <div class="card-info">
                <p>İlk Deneyimim</p>
                <h3>@ViewBag.firstExperience</h3>
            </div>
        </div>

        <!-- 5. Toplam Sertifika Sayısı -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-certificate"></i>
            </div>
            <div class="card-info">
                <p>Toplam Sertifika</p>
                <h3>@ViewBag.totalCertificates</h3>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-certificate"></i>
            </div>
            <div class="card-info">
                <p>Okuduğum İlk Üniversite</p>
                <h3>@ViewBag.firstUniversity</h3>
            </div>
        </div>

        <!-- 6. En Yüksek Yetenek Seviyesi -->
        <div class="dashboard-card">
            <div class="card-icon">
                <i class="fa-solid fa-trophy"></i>
            </div>
            <div class="card-info">
                <p>En Yüksek Yetenek</p>
                <h3>@ViewBag.bestSkill</h3>
            </div>
        </div>


    </div>
</div>


<style>
    /* --- DASHBOARD STİLLERİ --- */
    .dashboard-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        width: 100%;
    }

    .dashboard-card {
        background-color: var(--card-bg);
        border: 1px solid #333;
        border-radius: 15px;
        padding: 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
            border-color: #555;
        }

        /* Kartların altına ince bir gradient çizgi */
        .dashboard-card::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: var(--primary-gradient);
        }

    .card-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.05);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }

        .card-icon i {
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

    .card-info h3 {
        font-size: 24px;
        font-weight: 700;
        color: #fff;
        margin-bottom: 5px;
    }

    .card-info p {
        font-size: 13px;
        color: var(--text-muted);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
</style>